<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device.width, initial-scale=1.0" />
    <link rel="stylesheet" media="screen" href="~/Style/materialize.css" />
    <script type="text/javascript" src="~/Script/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/Script/materialize.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <title>@ViewBag.Title</title>

</head>
<body>
    <!--De navigatiebalk-->
    <nav class="nav-extended">
        <div class="nav-wrapper blue darken-1" id="nvbar">
            <a href="#" class="brand-logo">&nbsp;LIST Decaan</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li class="waves-effect" id="hrefhome"><a href="~/Decaan/Home">Home</a></li>
                <li class="waves-effect" id="hrefll"><a href="~/Decaan/Leerling/Index">Leerling</a></li>
                <li class="waves-effect" id="hreflogout"><a href="~/Login/Signout">Uitloggen</a></li>
            </ul>
        </div>
        <!--Het navigatiemenu voor op telefoons-->
        <ul class="sidenav" id="mobile-demo">
            <li id="mhrefhome"><a href="~/Decaan/Home">Home</a></li>
            <li id="mhrefll"><a href="~/Decaan/Leerling/Index">Leerling</a></li>
            <li id="mhreflogout"><a href="~/Login/Signout">Uitloggen</a></li>
            
        </ul>
    </nav>
    @RenderBody()
    <!--Dit zijn de script bestanden. Met JQuery-->
    <script type="text/javascript" src="~/Script/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/Script/materialize.js"></script>
    <!--Hier de JQuery initializeren-->
    <script type="text/javascript">
        $(document).ready(function () {
            $('.parallax').parallax();
            $('.sidenav').sidenav();
            $('.tabs').tabs();
            $('select').formSelect();
            $('.datepicker').datepicker();
            $('.modal').modal();
            M.updateTextFields();
        });
    </script>
</body>
</html>