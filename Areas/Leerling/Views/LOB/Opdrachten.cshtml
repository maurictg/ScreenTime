@model LIST.Models.LOBOrders
@{
    ViewData["Title"] = "Opdrachten";
    Layout = "~/Areas/Leerling/Views/Shared/_LayoutLOB.cshtml";

    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script>M.toast({ html: '@LIST.Classes.Layout.MessageColor(ViewBag.Message)[0]', classes: '@LIST.Classes.Layout.MessageColor(ViewBag.Message)[1]' });</script>
    }
    string afgerond = "?";
    try { afgerond = (Model.Checked == 1) ? "Ja" : "Nee"; } catch (Exception ex) {<p style="color: red;">@ex.ToString()</p> }

}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h3>Opdrachten</h3><br />
    <div class="row center-align centered">
        <div class="col s12 m9">

                <div class="row">
                    <div class="col s12 m12">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                @{ try
                                    {
                                        <span class="card-title">@Model.Title</span>
                                        <p>Einddatum: @Model.Deadline.ToShortDateString()</p>
                                        <p>Afgerond: <b>@afgerond</b></p><br />
                                        <p><b>Omschrijving: @Model.Description</b></p>

                                        using (Html.BeginForm("postOpdrachten", "LOB", FormMethod.Post))
                                        {
                                            <div class="row">
                                                <div class="row">
                                                    <div class="input-field col s12">
                                                        @Html.HiddenFor(x => x.Id)
                                                        @Html.TextAreaFor(x => x.Data, new { @class = "materialize-textarea white-text" })
                                                        <label for="tbVeld">Uitwerking</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-action">
                                                <input type="submit" class="waves-effect waves-light btn" value="Opslaan" formmethod="post" />
                                            </div>
                                        }
                                    }
                                    catch (Exception ex)
                                    {
                                        <p style="color: red;">@ex.ToString()</p>
                                    }
                                }
                            </div>
                    </div>
                </div>

        </div>
    </div>
    <script>
        $('hrefopdrachten').addClass('active');
        $('mhrefopdrachten').addClass('active');
    </script>
</body>
</html>