@model IEnumerable<LIST.Models.LOBOrders>
@{
    Layout = "~/Areas/Leerling/Views/Shared/_LayoutLOB.cshtml";
    ViewBag.Title = "LOB Leerling";
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script>M.toast({ html: '@LIST.Classes.Layout.MessageColor(ViewBag.Message)[0]', classes: '@LIST.Classes.Layout.MessageColor(ViewBag.Message)[1]' });</script>
    }
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="row">
        <div class="col s12 m6">
            <h3>Welkom</h3>
        </div>
        <div class="col s12 m6">
            <h3>LOB-Opdrachten</h3>
            @foreach (var opdracht in Model)
            {
                string afgerond = (opdracht.Checked == 1) ? "Ja" : "Nee";
                <div class="row">
                    <div class="col s12 m12">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">@opdracht.Title</span>
                                <p>Einddatum: @opdracht.Deadline.ToShortDateString()</p>
                                <p>Afgerond: <b>@afgerond</b></p>
                            </div>
                            <div class="card-action">
                                <a href="/Leerling/LOB/Opdrachten/@opdracht.Id">Openen</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        $('hrefhome').addClass('active');
        $('mhrefhome').addClass('active');
    </script>
</body>
</html>
